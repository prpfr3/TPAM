// tasks.json tells VS Code what to do when Ctrl + Shift +B (‘Build’) or when I ask it to run a custom task
// e.g. Ctrl + Shift + B → runs the “build” group task (migrate in this example).
// Or press F1 → Run Task → [task name] to choose any listed task.
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "run migrations",
      "type": "shell",
      "command": "python",
      "args": ["manage.py", "migrate"],
      "group": "build",
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "collect static files",
      "type": "shell",
      "command": "python",
      "args": ["manage.py", "collectstatic", "--noinput"],
      "problemMatcher": []
    },
    {
      "label": "run tests",
      "type": "shell",
      "command": "python",
      "args": ["manage.py", "test"],
      "group": "test",
      "problemMatcher": []
    }
  ]
}
